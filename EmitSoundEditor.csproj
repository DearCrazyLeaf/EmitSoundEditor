<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
        <AssemblyName>EmitSoundEditor</AssemblyName>
        <RootNamespace>EmitSoundEditor</RootNamespace>
        <!-- Emit directly into CounterStrikeSharp layout for easier packaging -->
        <OutputPath>bin\$(Configuration)\$(TargetFramework)\counterstrikesharp\plugins\EmitSoundEditor\</OutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CounterStrikeSharp.API" Version="*" />
        <PackageReference Include="MySqlConnector" Version="*" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\cs2-store\StoreApi\StoreApi.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="backup\**\*.cs" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="lang\**\*.json" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="$(NuGetPackageRoot)\mysqlconnector\2.5.0\lib\net8.0\MySqlConnector.dll" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

</Project>
